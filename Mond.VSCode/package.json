{
  "name": "mond-vscode",
  "displayName": "Mond",
  "version": "0.0.1",
  "publisher": "Rohansi",
  "description": "Language support for the Mond scripting language",
  "author": {
    "name": "Rohans",
    "email": "rohan-singh@hotmail.com"
  },
  "license": "MIT",
  "keywords": [
    "multi-root ready"
  ],
  "engines": {
    "vscode": "^1.56.0"
  },
  "icon": "images/mond-icon.png",
  "categories": [
    "Programming Languages",
    "Debuggers"
  ],
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Rohansi/Mond.git"
  },
  "bugs": {
    "url": "https://github.com/Rohansi/Mond/issues"
  },
  "scripts": {
    "vscode:prepublish": "npm run package-ext",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "webpack --watch --devtool nosources-source-map --info-verbosity verbose --config ./build/extension.webpack.config.js",
    "watch2": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "package": "vsce package",
    "publish": "vsce publish",
    "package-ext": "webpack --mode production --config ./build/extension.webpack.config.js"
  },
  "dependencies": {
    "isomorphic-ws": "^4.0.1",
    "vscode-debugadapter": "^1.47.0",
    "ws": "^7.4.6"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.3",
    "utf-8-validate": "^5.0.5"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.12.2",
    "@types/vscode": "^1.56.0",
    "@types/ws": "^7.4.4",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "eslint": "^7.28.0",
    "glob": "^7.1.7",
    "mocha": "^9.0.0",
    "ts-loader": "^9.2.3",
    "typescript": "^4.3.2",
    "vsce": "^1.93.0",
    "vscode-debugadapter-testsupport": "^1.47.0",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.2"
  },
  "main": "./dist/ext/extension.js",
  "activationEvents": [
    "onDebugResolve:mond",
    "onCommand:extension.mond.runEditorContents",
    "onCommand:extension.mond.debugEditorContents"
  ],
  "contributes": {
    "languages": [
      {
        "id": "mond",
        "aliases": [
          "Mond",
          "mond"
        ],
        "extensions": [
          ".mnd"
        ],
        "configuration": "./syntaxes/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mond",
        "scopeName": "source.mond",
        "path": "./syntaxes/mond.tmLanguage.json"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "extension.mond.runEditorContents",
          "when": "resourceLangId == mond",
          "group": "1_run@10"
        },
        {
          "command": "extension.mond.debugEditorContents",
          "when": "resourceLangId == mond",
          "group": "1_run@20"
        }
      ],
      "commandPalette": [
        {
          "command": "extension.mond.debugEditorContents",
          "when": "resourceLangId == mond"
        },
        {
          "command": "extension.mond.runEditorContents",
          "when": "resourceLangId == mond"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.mond.debugEditorContents",
        "title": "Debug File",
        "category": "Mond",
        "enablement": "!inDebugMode",
        "icon": "$(debug-alt)"
      },
      {
        "command": "extension.mond.runEditorContents",
        "title": "Run File",
        "category": "Mond",
        "enablement": "!inDebugMode",
        "icon": "$(play)"
      }
    ],
    "breakpoints": [
      {
        "language": "mond"
      }
    ],
    "debuggers": [
      {
        "type": "mond",
        "label": "Mond",
        "program": "./out/debugAdapter.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Absolute path to a text file.",
                "default": "${workspaceFolder}/main.mnd"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": true
              },
              "trace": {
                "type": "boolean",
                "description": "Enable logging of the Debug Adapter Protocol.",
                "default": true
              }
            }
          },
          "attach": {
            "required": [
              "endpoint"
            ],
            "properties": {
              "endpoint": {
                "type": "string",
                "description": "WebSocket endpoint the debugger is running on.",
                "default": "ws://127.0.0.1:1597"
              },
              "trace": {
                "type": "boolean",
                "description": "Enable logging of the Debug Adapter Protocol.",
                "default": true
              }
            }
          }
        },
        "initialConfigurations": [],
        "configurationSnippets": [
          {
            "label": "Mond: Launch",
            "description": "A new configuration for debugging a Mond script.",
            "body": {
              "name": "Run Mond script",
              "request": "launch",
              "type": "mond",
              "program": "^\"\\${workspaceFolder}/\\${file}\"",
              "stopOnEntry": true
            }
          },
          {
            "label": "Mond: Attach",
            "description": "A new configuration for debugging a running Mond process.",
            "body": {
              "name": "Attach to Mond process",
              "request": "attach",
              "type": "mond",
              "endpoint": "^\"ws://127.0.0.1:1597\""
            }
          }
        ]
      }
    ]
  }
}
